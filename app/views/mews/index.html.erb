<p id="notice"><%= notice %></p>

<h1>Listing Mews</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mews.each do |mew| %>
      <tr>
        <td><%= mew.message %></td>
        <td><%= link_to mew.user.username, show_user_path(id: mew.user.id) %></td>

        <td><%= link_to 'Show', mew %></td>
        <td><%= link_to 'Edit', edit_mew_path(mew) %></td>
        <td><%= link_to 'Destroy', mew, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

