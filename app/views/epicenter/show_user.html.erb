<h1><%= @user.username %>'s Profile &amp; Mews</h1>

<p><%= @user.name %></p>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>
  
  <% if current_user != @user.id %>
 
<p>
  <% if current_user.following.include?(@user.id) %>
        <%= link_to "Unfollow", unfollow_path(id: @user.id), class: "btn" %>
    <% else %>
    <%= link_to "Follow", now_following_path(id: @user.id), class: "btn" %>
    <% end %>
</p>
<% end %>
<% @user.mews.each do |mew| %>
<div>
    <p><%= mew.message %></p>
    <p><%= mew.user.username %></p>
</div>
<% end %>